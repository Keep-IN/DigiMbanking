<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Features.Auth.OnBoard.OnBoard2">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivIlusOb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ilus_onboar2" />

    <TextView
        android:id="@+id/tvJudulOB2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="51dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Akses layanan perbankan lebih efisien"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivIlusOb2" />

    <TextView
        android:id="@+id/tvDescOb2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Kami akan memandu Anda melalui  proses onboarding dengan mudah"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tvJudulOB2"
        app:layout_constraintStart_toStartOf="@+id/tvJudulOB2"
        app:layout_constraintTop_toBottomOf="@+id/tvJudulOB2" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivBackOb2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivNextOb2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_next" />
</androidx.constraintlayout.widget.ConstraintLayout>