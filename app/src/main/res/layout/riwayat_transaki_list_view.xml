<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/iv_transaksi_masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_masuk" />

            <TextView
                android:id="@+id/tv_transaksi_masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Transfer Masuk"
                app:layout_constraintBottom_toBottomOf="@+id/iv_transaksi_masuk"
                app:layout_constraintTop_toTopOf="@+id/iv_transaksi_masuk"
                tools:layout_editor_absoluteX="90dp" />

            <TextView
                android:id="@+id/tv_nominal_riwayat_transaksi_masuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Rp4.500.000"
                android:textColor="@color/green_700"
                app:layout_constraintBottom_toBottomOf="@+id/tv_transaksi_masuk"
                app:layout_constraintTop_toTopOf="@+id/tv_transaksi_masuk"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="260dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>