<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_primary"
    tools:context=".Features.Transfer.Riwayat.Riwayat2.RiwayatFragment">

    <FrameLayout
        android:id="@+id/loadScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1D000000"
        android:elevation="3dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.github.ybq.android.spinkit.SpinKitView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large.FadingCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/primary" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_title_RiwayatTransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Riwayat Transaksi"
        android:textColor="@color/black_basic"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvLoad"
        android:layout_width="21dp"
        android:layout_height="23dp"
        android:layout_marginStart="182dp"
        android:layout_marginEnd="182dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvTransaksiRiwayat"
        tools:visibility="gone">


        <!--        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent">-->

        <!--            <ImageView-->
        <!--                android:id="@+id/ivLoading"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="match_parent"-->
        <!--                android:src="@drawable/loading"-->
        <!--                android:scaleType="fitCenter"-->
        <!--                android:visibility="visible"/>-->

        <!--            <ProgressBar-->
        <!--                android:id="@+id/progressBarLoading"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_gravity="center"-->
        <!--                android:visibility="gone" />-->
        <!--        </FrameLayout>-->

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_primary_400"
            android:visibility="invisible"
            tools:visibility="gone" />
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_filter"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="39dp"
        app:cardCornerRadius="17.5dp"
        app:layout_constraintEnd_toStartOf="@+id/cvRiwayatTransaksiSemua"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_RiwayatTransaksi"
        app:strokeColor="@color/purple"
        app:strokeWidth="1dp">

        <ImageView
            android:id="@+id/iv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/filter" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvRiwayatTransaksiSemua"
        android:layout_width="81dp"
        android:layout_height="37dp"
        android:layout_marginStart="29dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/cv_filter"
        app:layout_constraintStart_toEndOf="@+id/cv_filter"
        app:layout_constraintTop_toTopOf="@+id/cv_filter"
        app:strokeColor="@color/purple"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_semua_riwayatTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Semua"
                android:textColor="@color/black_basic"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvRiwayatTransaksiMasuk"
        android:layout_width="81dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/cvRiwayatTransaksiSemua"
        app:layout_constraintStart_toEndOf="@+id/cvRiwayatTransaksiSemua"
        app:layout_constraintTop_toTopOf="@+id/cvRiwayatTransaksiSemua"
        app:strokeColor="@color/purple"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">>

            <TextView
                android:id="@+id/tv_masuk_riwayatTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Masuk"
                android:textColor="@color/black_basic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvRiwayatTransaksiKeluar"
        android:layout_width="81dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/cvRiwayatTransaksiMasuk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cvRiwayatTransaksiMasuk"
        app:layout_constraintTop_toTopOf="@+id/cvRiwayatTransaksiMasuk"
        app:strokeColor="@color/purple"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_keluar_riwayatTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Keluar"
                android:textColor="@color/black_basic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTransaksiRiwayat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_filter"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageEmptyListRiwayat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/empty_list_riwayat"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/rvTransaksiRiwayat"
        app:layout_constraintEnd_toEndOf="@+id/rvTransaksiRiwayat"
        app:layout_constraintStart_toStartOf="@+id/rvTransaksiRiwayat"
        app:layout_constraintTop_toTopOf="@+id/rvTransaksiRiwayat" />
    />

    <TextView
        android:id="@+id/tvEmptyTransaksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Belum Ada Transaksi"
        android:textColor="@color/disable"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/rvTransaksiRiwayat"
        app:layout_constraintEnd_toEndOf="@+id/imageEmptyListRiwayat"
        app:layout_constraintStart_toStartOf="@+id/imageEmptyListRiwayat"
        app:layout_constraintTop_toBottomOf="@+id/imageEmptyListRiwayat" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAutoScrollTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="41dp"
        android:backgroundTint="@color/purple_500"
        android:contentDescription="@string/content_description_scroll_top"
        android:src="@drawable/auto_scroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedCorner"
        app:tint="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>